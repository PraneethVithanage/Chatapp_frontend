<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#59009688"
    tools:context=".RegisterActivity" >

    <EditText
        android:id="@+id/Reg_user_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/rounded_login_register"
        android:gravity="center_vertical"
        android:hint="@string/username"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pro_btn" />

    <EditText
        android:id="@+id/Log_email_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_login_register"
        android:ems="10"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:hint="@string/email"
        android:textSize="20dp"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/Reg_user_text"
        app:layout_constraintStart_toStartOf="@+id/Reg_user_text"
        app:layout_constraintTop_toBottomOf="@+id/Reg_user_text" />

    <EditText
        android:id="@+id/Log_password_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_login_register"
        android:ems="10"
        android:paddingLeft="20dp"
        android:hint="@string/password"
        android:textSize="20dp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/Log_email_text"
        app:layout_constraintStart_toStartOf="@+id/Log_email_text"
        app:layout_constraintTop_toBottomOf="@+id/Log_email_text" />

    <Button
        android:id="@+id/log_btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_btn_login_register"
        android:text="Registration"
        app:layout_constraintEnd_toEndOf="@+id/Log_password_text"
        app:layout_constraintStart_toStartOf="@+id/Log_password_text"
        app:layout_constraintTop_toBottomOf="@+id/Log_password_text" />

    <TextView
        android:id="@+id/nav_reg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginTop="8dp"
        android:text="I already have an acount"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/log_btn"
        app:layout_constraintStart_toStartOf="@+id/log_btn"
        app:layout_constraintTop_toBottomOf="@+id/log_btn" />

    <ImageButton
        android:id="@+id/pro_btn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/rount_pic_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/select_image_viwe_reg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:civ_border_width="4px"
        app:layout_constraintBottom_toBottomOf="@+id/pro_btn"
        app:layout_constraintEnd_toEndOf="@+id/pro_btn"
        app:layout_constraintStart_toStartOf="@+id/pro_btn"
        app:layout_constraintTop_toTopOf="@+id/pro_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>